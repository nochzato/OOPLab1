@page
@model Pages.RSAModel
@{
}

<div class="form-group mb-3">
	<form method="post" asp-page-handler="generate"><button class="btn btn-primary" type="submit">Generate private/public key pair</button></form>
</div>

<div class="form-group mb-3">
	<textarea class="form-control" placeholder="Private key...">@Model.PrivateKey</textarea>
</div>

<div class="form-group">
	<textarea class="form-control" placeholder="Public key...">@Model.PublicKey</textarea>
</div>

<hr />


<form method="post" asp-page-handler="encrypt" class="mb-3">
<div class="form-group row">
	<div class="col-sm">
	<label for="text" class="col col-form-label">Enter text to encrypt: </label>
	</div>
	<div class="col-sm-5">
      <textarea class="form-control" name="text" id="text" rows="5">@Model.DecryptedText</textarea>
    </div>
	<div class="col-sm-5">
      <button class="btn btn-primary" type="submit">Encrypt</button>
    </div>
</div>
</form>

<form method="post" asp-page-handler="decrypt">
<div class="form-group row">
	<div class="col-sm">
	<label for="text" class="col col-form-label">Enter text to decrypt: </label>
	</div>
	<div class="col-sm-5">
      <textarea class="form-control" name="text" id="text" rows="5">@Model.EncryptedText</textarea>
    </div>
	<div class="col-sm-5">
      <button class="btn btn-primary" type="submit">Decrypt</button>
    </div>
</div>
</form>